<h1><%= accurate_title %> <small><%=@order.state%></small></h1>

<div class="checkout-content">
  <div id="order">
    <div id="order_info" class="clearfix">
      <div id="ship_address" >
          <%= render :partial =>'checkout/address_display', :locals => { :address => @order.ship_address,:label =>t("shipping_address") } %>
        <br/>
        <div class="address_label"><%=t('shipping_method')%></div>
        <%= @order.shipping_method.name%>
      </div>

      <div id="bill_address">
        <%= render :partial =>'checkout/address_display', :locals => { :address => @order.bill_address,:label =>t('billing_address') } %>
        <div id="cclogo">
          <%= creditcard_logo( @order.payments.first.source ) %>
        </div>
        <div>
        <%="#{t('ends_in')} #{@order.payments.first.source.last_digits} #{t('expires')} #{@order.payments.first.source.month}/#{@order.payments.first.source.year}" %>
          <p>&nbsp</p>
        </div>
      </div>
    </div>

    <div id="order_items">
      <table class="index">
        <thead>
        <tr>
          <th></th>
          <th><%= t('item_description') %></th>
          <th class="price"><%= t('price') %></th>
          <th class="qty"><%= t('qty') %></th>
          <th class="total"><span><%= t('total') %></span></th>
        </tr>
        </thead>
        <tbody>
        <% @order.line_items.each do |item| %>
            <%locals = {:item => item} %>
            <tr class="line_item">
              <td>
                <%=( item.photo ? image_tag( item.photo.thumb_url ) : '&nbsp'  )%>
              </td>
              <td>
                <h4><%=item.variant.product.name%> <%= "(" + variant_options(item.variant) + ")" unless item.variant .option_values.empty? %></h4>
                <p>SIZE HERE</p>
              </td>
              <td ><%= number_to_currency item.price %></td>
              <td ><%=item.quantity%></td>
              <td ><span><%= number_to_currency (item.price * item.quantity)%></span></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>

<%content_for :small_print do %>
    By placing your order you agree ot ZangZing's <a class="hyperlink-button" target="_blank" href="http://www.zangzing.com/terms">the terms of service</a> and <a class="hyperlink-button" target="_blank" href="http://www.zangzing.com/terms">privacy policy</a>.
<%end%>



