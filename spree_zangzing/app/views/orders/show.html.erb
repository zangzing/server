<h1><%= accurate_title %> <small><%=@order.state%></small></h1>

<div class="checkout-content">
  <div id="order">
    <div id="order_info" class="clearfix">
      <div id="ship_address" >
          <%= render :partial =>'checkout/address_display', :locals => { :address => @order.ship_address,:label =>t("shipping_address") } %>
        <br/>
        <div class="address_label"><%=t('shipping_method')%></div>
        <%= @order.shipping_method.name%>
      </div>

      <div id="bill_address">
        <%= render :partial =>'checkout/address_display', :locals => { :address => @order.bill_address,:label =>t('billing_address') } %>
        <div id="cclogo">
          <%= creditcard_logo( @order.payments.first.source ) %>
        </div>
        <div>
        <%="#{t('ends_in')} #{@order.payments.first.source.last_digits} #{t('expires')} #{@order.payments.first.source.month}/#{@order.payments.first.source.year}" %>
          <p>&nbsp</p>
        </div>
      </div>
    </div>

    <div id="order_items">
      <table class="index">
        <tbody>
        <%if @order.line_items.prints.present? %>
            <%= render 'prints_line_item', :order => @order%>
        <% end %>
        <% @order.line_items.not_prints.each do |line_item| %>
            <%= render 'line_item', :line_item => line_item%>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>

<%content_for :small_print do %>
    By placing your order you agreed to ZangZing's <a class="hyperlink-button" target="_blank" href="http://www.zangzing.com/terms">terms of service and privacy policy</a>.
<%end%>



