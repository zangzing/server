<h1><%=t(:order_history) %></h1>

<div id="order">
  <table>
    <tr>
      <th><%=t(:order_number)%></th>
      <th><%=t(:order_date)%></th>
      <th><%=t(:shipped_to)%></th>
      <th><%=t(:status)%></th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%=link_to order.number,  order_path( order) %></td>
      <td><%=order.completed_at.strftime("%d %b %Y")%></td>
      <td><%= "#{order.ship_address.firstname} #{order.ship_address.lastname}"%></td>
      <td><%=order.state%></td>
    </tr>
    <%end%>
  </table>


  <p>
    <%= link_to t('back_to_account_settings'), edit_user_path( current_user.username ) %>
    <%= link_to t('back_to_homepage'), edit_user_path( current_user.username ) %>
  </p>
</div>