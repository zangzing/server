<%content_for :page_title do
    t(@order.state, :scope => :order_state).titleize
end %>

  <div class="row">
    <div class="span4 columns">
      <%= render :partial =>'address_display', :locals => { :address => @order.ship_address,:label =>t("shipping_address") } %>
      <a href="javascript:void(0)" onclick="$('#checkout_form_confirm').attr('action','<%=checkout_state_path('ship_address')%>').submit();">change</a>

    </div>
    <div class="span2 columns offset2">
      <%= render :partial =>'address_display', :locals => { :address => @order.bill_address,:label =>t('billing_address') } %>
      <a href="javascript:void(0)" onclick="$('#checkout_form_confirm').attr('action','<%=checkout_state_path('payment')%>').submit();">change</a>
    </div>

  </div>

  <div class="row">
    <div class="span4 columns">
      <%= select( :order,
                  :shipping_method_id,
                  @order.rate_hash.collect{|smethod|[ "#{smethod[:name]} #{number_to_currency smethod[:cost]}", smethod[:id] ]},
                  {},
                  { :onchange => "$('#checkout_form_confirm').attr('action','#{update_checkout_path('delivery')}').submit();"})%>
    </div>
    <div class="spans2 columns offset2">
      <strong>Payment</strong>
      <%= "#{@order.payments.first.source.display_number}" %>
      <a href="javascript:void(0)" onclick="$('#checkout_form_confirm').attr('action','<%=checkout_state_path('payment')%>').submit();">change</a>
    </div>
  </div>







  <div class="row">
    <div class="spans10 columns">
      <table class="index">
        <thead>
        <tr>
          <th></th>
          <th><%= t('item_description') %></th>
          <th class="price"><%= t('price') %></th>
          <th class="qty"><%= t('qty') %></th>
          <th class="total"><span><%= t('total') %></span></th>
        </tr>
        </thead>
        <tbody>
        <% @order.line_items.each do |item| %>
            <%locals = {:item => item} %>
            <tr>
              <td>
                <%=( item.photo ? image_tag( item.photo.thumb_url ) : '&nbsp'  )%>
              </td>
              <td style="vertical-align:bottom;">
                <h4><%=item.variant.product.name%> <%= "(" + variant_options(item.variant) + ")" unless item.variant .option_values.empty? %></h4>
                SIZE HERE
              </td>
              <td style="vertical-align:bottom;"><%= number_to_currency item.price %></td>
              <td style="vertical-align:bottom;"><%=item.quantity%></td>
              <td style="vertical-align:bottom;"><span><%= number_to_currency (item.price * item.quantity)%></span></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  Promotional Codes

  <tbody id='subtotal'>
  <tr class="total" id="subtotal-row">
    <td colspan="3"><b><%= t('subtotal') %>:</b></td>
    <td class="total"><span><%= number_to_currency @order.item_total %></span></td>
  </tr>
  </tbody>
  <tbody id="order-charges">
  <% @order.adjustments.each do |adjustment| %>
      <tr class="total">
        <td colspan="3"><strong><%= adjustment.label %></strong></td>
        <td class="total"><span><%= number_to_currency adjustment.amount %></span></td>
      </tr>
  <% end %>
  </tbody>

  <tbody id='order-total'>
  <tr class="total">
    <td colspan="3"><b><%= t('order_total') %>:</b></td>
    <td class="total"><span id="order_total"><%= number_to_currency @order.total %></span></td>
  </tr>
  </tbody>
  </table>

  <hr />

  <div class="form-buttons">
    <input type="submit" class="continue button primary" value="<%=t("place_order") %>"/>
  </div>
