<%#  Displays one address form, must pass
  #  form in :f,
  #  address in address
  #  legend for address section in legend
%>
<%= f.hidden_field :user_id if address.user %>
<p id="fname" class="field">
  <%= f.label :firstname, t(:first_name) %>
  <%= f.text_field :firstname, :class => 'required' %>
</p>

<p id="lname" class="field">
  <%= f.label :lastname, t(:last_name) %>
  <%= f.text_field :lastname, :class => 'required' %>
</p>
<p id="phone" class="field">
    <%= f.label :phone, t(:phone) %>
    <%= f.text_field :phone, :class => 'required' %>
</p>
<%unless current_user %>
         <p id="order_email" class="field">
            <%= form.label :email, "#{t("email")} (#{t('only_for_order_updates')})" %>
            <%= form.text_field :email, :class => 'required' %>

          <a id="email_question" class="field_question" href="/static/store/cvv_question.html" target="_blank" onclick="window.open(this.href,'cvv_info','left=20,top=20,width=500,height=500,toolbar=0,resizable=0,scrollbars=1');return false">
              <%= image_tag 'store/question.png' %>
          </a>
            </p>

<%end%>


</fieldset>
<fieldset class="address">
<h4><%=legend%></h4>
<p id="address" class="field">
  <%= f.label :address1, t(:street_address) %>
  <%= f.text_field :address1, :class => 'required' %>
</p>

<p id="address2" class="field">
  <%= f.label :address2, t(:street_address_2) %>
  <%= f.text_field :address2 %>
</p>

<p id="city" class="field">
  <%= f.label :city, t(:city) %>
  <%= f.text_field :city, :class => 'required' %>
</p>

<p id="state" class="field">
    <%= states_dropdown f, address.country%>
</p>

<p id="zip" class="field">
  <%= f.label :zipcode, t(:zip) %>
  <%= f.text_field :zipcode, :class => 'required' %>
</p>

<p id="country" class="field">
  <span id="scountry"><%= f.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'required'} %></span>
</p>


