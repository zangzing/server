<div class="checkout-summary">
  <h3><%= t(:order_summary) %></h3>
  <table>
    <tbody>
    <tr>
      <td><strong><%= t('item_total') %>:</strong></td>
      <td><strong><%= number_to_currency order.item_total %></strong></td>
    </tr>
    <tbody id="summary-order-charges">
    <% order.adjustments.each do |adjustment| %>
        <tr>
          <td><%= adjustment.label %>: </td>
          <td><%= number_to_currency adjustment.amount %></td>
        </tr>
    <% end %>
    </tbody>
    <tr>
      <td><strong><%= t('order_total') %>:</strong></td>
      <td><strong><span id='summary-order-total'><%= number_to_currency @order.total %></span></strong></td>
    </tr>
    </tbody>

  </table>
  <div id="place_order">
    <a href="javascript:void(0);" onclick="$('#checkout_form_confirm').attr('action','<%=update_checkout_path('confirm')%>').submit();" class="green-button"><span><%=t('place_order')%></span></a>
    <div id="logo_secure_lock">
        <%= image_tag 'store/secure-lock.png'%>
        <%=t('secure_checkout')%>
    </div>
  </div>

</div>