<% if signed_in? %>
  <table class="front">
    <tr>
      <td class="main">
        <h2 class="album"><%= h current_user.name %>'s Albums</h2>
   	 	 <%= render 'pages/feed' %>
         <%= button_to "Create New Album", new_user_album_path( current_user ), :method => :get %>

      </td>
      <td class="sidebar round">
        <%= render 'pages/user_info' %>
      </td>
    </tr>
  </table>
<% else %>
	<h1>Sample App</h1>
	<p>
  		This is the home page for the
  		<a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>	            
         sample application.
  	</p>

	<%= link_to "Sign up now!",
	signup_path, :class => "signup_button round" %>
<%end%>