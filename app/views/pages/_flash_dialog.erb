<style type="text/css">
#flash-dialog{
    width:  350px;
    height: 150px;
	display: none;
    border: 0;
}
#flash-dialog #flash{
   text-align: left;
   color: #6A6A6C;
   font-weight: 200;
   position: absolute;
   top:  30px;
   left: 30px;
   font-size: 14pt;
   padding-right: 30px;
}
#flash-dialog #ok{
  position: absolute;
  bottom:  30px;
  right:   40px;
  width:   80px;
}
</style>

<script type="text/javascript">
$("<div id='flash-dialog'><div><div id='flash'></div><a id='ok' class='newgreen-button'><span>OK</span></a></div></div>").zz_dialog({ autoOpen: false });
                     $('#flash-dialog #flash').text('<%=flash[:notice]%>');
                     $('#ok').click( function(){ $('#flash-dialog').zz_dialog('close').empty().remove(); });
                     $('#flash-dialog').zz_dialog('open');
</script>
