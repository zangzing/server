<% content_for :meta_tags do %>
    <%= render :partial => "facebook/album_opengraph_tags" %>
<% end %>




<ul id="album-timeline">

  <% @activities.each do |activity| %>
                    <%case activity %>
                        <% when UploadActivity then%>
                            <%= render :partial => 'upload_activity', :locals => {:activity => activity, :album => @album } %>
                        <% when ShareActivity then%>
                            <%= render :partial => 'share_activity', :locals => {:activity => activity, :album => @album } %>
                    <%end%>
  <%end%>

</ul>