<script type="text/javascript">
<%
    @google_id = current_user.identity_for_google
    @yahoo_id  = current_user.identity_for_yahoo
    @mslive_id  = current_user.identity_for_mslive
    @local_id  = current_user.identity_for_local
%>
$(document).ready( function(){
    sharecontacts.setup( <%=( @google_id.credentials_valid? ? 1 : 0 ) %> == 1,
                        "<%= @google_id.last_contact_refresh%>",
                         <%=( @yahoo_id.credentials_valid? ? 1 : 0 ) %> == 1,
                        "<%= @yahoo_id.last_contact_refresh%>",
                         <%=( @mslive_id.credentials_valid? ? 1 : 0 ) %> == 1,
                        "<%= @mslive_id.last_contact_refresh%>",
                         <%=( @local_id.credentials_valid? ? 1 : 0 ) %> == 1,
                        "<%= @local_id.last_contact_refresh%>");
});

mslive_contacts = [
    <% @mslive_id.contacts.each do|contact| %>
       ["<%=contact.name.to_s%>","<%=contact.address%>"],
    <% end %>
     ['','']
];



yahoo_contacts = [
    <% @yahoo_id.contacts.each do|contact| %>
       ["<%=contact.name.to_s%>","<%=contact.address%>"],
    <% end %>
    ['','']
];

google_contacts = [
    <% @google_id.contacts.each_with_index do |contact, index| %>
       ["<%=contact.name.to_s%>","<%=contact.address%>"],
    <% end %>
    ['','']
];

local_contacts = [
    <% @local_id.contacts.each do|contact| %>
       ["<%=contact.name.to_s%>","<%=contact.address%>"],
    <% end %>
    ['','']
];
</script>
