<div class="album-header">
  <h3>Share Your Album</h3>
  <h4>Email a link to your album to selected friends.</h4>
</div>

<div id="scroll-body">
  <div id="form-container-2" class="clearfix">
    <ul id="email-sync" class="clearfix">
      <li class="title">Import contacts from</li>
      <li><img src="/images/btn-gmail-sync.png" id="gmail-sync" /></li>
      <li><img src="/images/btn-outlook-sync.png" id="outlook-sync" /></li>
      <li><img src="/images/btn-yahoo-sync.png" id="yahoo-sync" /></li>
    </ul>
    <div class="clear-fix"></div>
    
    <%form_for [@share], :url => create_album_share_path(@album)  do |f| %>
      <%= f.error_messages %>  
      <dl id="email-share-form">
        <dt>To:</dt>
        <dd><input type="text" name="email_share[to]" id="email_share_recipients" /></dd>
        <div class="clear-fix"></div>
        <dt>Subject:</dt>
        <dd><input type="text" name="email_share[subject]" id="email_share_subject" /></dd>
        <div class="clear-fix"></div>
        <dt>Message:</dt>
        <dd class="textarea"><textarea rows="6" name="email_share[message]" id="email_share_message"></textarea></dd>
      </dl>
      <div class="clear-fix"></div>
      
      <input type="image" src="/images/btn-send.png" name="submit" id="mail-submit" />
  
    <% end %>
  </div>
</div>

<div class="offset">
 <table>
   <tr>
     <td> Gmail:</td>
     <% unless @google_id.credentials_valid? %>
         <td> <%= button_to_function "Import", "call_new_google_session();return false;", :id => "google_import_button" %></td>
         <td> <div id="last_google_import" ></div></td>
     <% else %>
        <td> <%= button_to_function "Refresh", "call_google_import();return false;", :id => "google_import_button" %></td>
        <td> <div id="last_google_import" >Last imported on: <%= @google_id.last_contact_refresh %></div></td>
     <% end %>    
   </tr>
   <td> Yahoo:</td>
     <% unless @yahoo_id.credentials_valid? %>
         <td> <%= button_to_function "Import", "call_new_yahoo_session();return false;", :id => "yahoo_import_button" %></td>
         <td> <div id="last_yahoo_import" ></div></td>
     <% else %>
        <td> <%= button_to_function "Refresh", "call_yahoo_import();return false;", :id => "yahoo_import_button" %></td>
        <td> <div id="last_yahoo_import" >Last imported on: <%= @yahoo_id.last_contact_refresh %></div></td>
     <% end %>
   </tr>
 </table>
<%form_for [@share], :url => create_album_share_path(@album)  do |f| %>
   <%= f.error_messages %>
   <table>     
   <tr><td>To: <%= f.text_field(  :to, :size=>40, :id => "ToField") %></td></tr>
   <tr><td>Subject: <%= f.text_field(  :subject, :size=>40) %></td></tr>
   <tr><td>Message: <%= f.text_area(   :message, :cols=>40,  :rows=>10) %></td><td><%= f.submit "Send"%></td></tr>
   </table>
<% end %>

<form action="" onsubmit="return false;">
	<p>
		Local Contact Autocomplete:
		<input type="text" id="CityLocal" value="" />
		<input type="button" value="Get Value" onclick="lookupLocal();" />
		(Shows a max of 10 entries)
	</p>
</form>

<script type="text/javascript" src="/javascripts/sharecontacts.js" ></script>
<script type="text/javascript">
  
$(document).ready( function(){
 sharecontacts.setup( <%=( @google_id.credentials_valid? ? 1 : 0 ) %> == 1,
                 "<%= @google_id.last_contact_refresh%>",
                 <%=( @yahoo_id.credentials_valid? ? 1 : 0 ) %> == 1,
                 "<%= @yahoo_id.last_contact_refresh%>")
});

google_contacts = [
        <% @google_id.contacts.each do|contact| %>
        ["<%=contact.name%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
        ["<%=contact.address%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
        <% end %>
        "ZZangZZing"
    ];
yahoo_contacts = [
    <% @yahoo_id.contacts.each do|contact| %>
    ["<%=contact.name%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
    ["<%=contact.address%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
    <% end %>
    "ZZZangZZZing"
];

// -------------------- AUTOCOMPLETE -----------------------------
function findValue(li) {
	if( li == null ) return alert("No match!");

	// if coming from an AJAX call, let's use the CityId as the value
	if( !!li.extra ) var sValue = li.extra[0];

	// otherwise, let's just display the value in the text box
	else var sValue = li.selectValue;

    var recipients = $("#ToField").val()
    if( recipients.length > 0 ) recipients+=(";")
    recipients +=  sValue
    $("#ToField").val( recipients )
}
function selectItem(li) {
	findValue(li);
}
function formatItem(row) {
	return row[0] + " (id: " + row[1] + ")";
}
function lookupLocal(){
	var oSuggest = $("#CityLocal")[0].autocompleter;
	oSuggest.findValue();
	return false;
}
function reloadAutocompleter () {
	$("#CityLocal").autocompleteArray(
            google_contacts.concat( yahoo_contacts ),
                {
                    delay:10,
                    minChars:1,
                    matchSubset:1,
                    onItemSelect:selectItem,
                    onFindValue:findValue,
                    autoFill:true,
                    maxItemsToShow:10,
                    selectFirst:true,
                    selectOnly:true,


                }
            );
}
</script>
</div>
