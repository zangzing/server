<div class="album-header">
  <h3>Post Your Album</h3>
  <h4>Share your album with all your friends on Facebook or Twitter!</h4>
</div>

<div id="scroll-body">
 <%= form_for [@share], :url => create_album_share_path(@album) , :html =>{ :id => "new_post_share" } do |f| %>

<!--form method="post" id="new_post_share" action=""-->
    <input type="hidden" name="service" value="social">

      <table id="social-form">
        <tr>
          <td></td>
          <td>
            <input type="checkbox" name="recipients[]" id="facebook_box"  value="facebook" <%=( @facebook == '1' ? "authorized='yes' checked='checked'" : "" )%> /> <img src="/images/icon-facebook-16.png" />
            Facebook
            <input type="checkbox" name="recipients[]" id="twitter_box"  value="twitter" <%=( @twitter == '1' ? "authorized='yes' checked='checked'" : "" )%>  /> <img src="/images/icon-twitter-16.png" />
            Twitter
            <span id="character-count">0 characters</span>
          </td>
        </tr>
        <tr>
          <td>Post</td>
          <td>
            <textarea rows="3" name="message" id="post_share_message"></textarea>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <a id="cancel-share" class="black-button"><span>Cancel</span></a>
            <a id="post_share_button" class="green-button"><span>Post</span></a>
          </td>
        </tr>
      </table>
  <%end%>
</div>

