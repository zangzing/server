		(Shows a max of 10 entries)
	</p>
</form>

<script type="text/javascript">



function findValue(li) {
	if( li == null ) return alert("No match!");

	// if coming from an AJAX call, let's use the CityId as the value
	if( !!li.extra ) var sValue = li.extra[0];

	// otherwise, let's just display the value in the text box
	else var sValue = li.selectValue;

    var recipients = $("#ToField").val()
    if( recipients.length > 0 ) recipients+=(";")
    recipients +=  sValue
    $("#ToField").val( recipients )
}

function selectItem(li) {
	findValue(li);
}
function formatItem(row) {
	return row[0] + " (id: " + row[1] + ")";
}

function lookupLocal(){
	var oSuggest = $("#CityLocal")[0].autocompleter;
	oSuggest.findValue();
	return false;
}

function call_new_google_session(){
    $("#google_import_button").attr('disabled', 'disabled')
    oauthmanager.login( '<%=new_google_session_url%>', google_login_success)
}
function google_login_success(){
    call_google_import()
    $("#google_import_button").attr('onclick', '').click(call_google_import);
    $("#google_import_button").attr('value', 'Refresh')
}
function call_google_import() {
    $("#google_import_button").attr('disabled', 'disabled')
    $("#last_google_import").html("Refreshing...");
    $.ajax({
      dataType: 'json',
      url: '<%=google_contacts_url(:import)%>',
      success: import_google_success,
      error: import_google_failure
    });
}
function import_google_success( contacts ){
    var full_address
    google_contacts = [];
    for each ( var c in contacts) {
        full_address = '<' +c.name+ '> '+c.address
        google_contacts.push( [ c.name, full_address] );
        google_contacts.push( [ c.address, full_address] );
    }
    loadAutocompleter()
    $("#last_google_import").html("Last imported a second ago.")
    $("#google_import_button").attr('disabled','')
}
function import_google_failure( errors ){
   alert("Unable to refresh google contacts at the moment. Please try later")
   $("#last_google_import").html("")
   $("#google_import_button").attr('disabled','')
}

function call_new_yahoo_session(){
    $("#yahoo_import_button").attr('disabled', 'disabled')
    oauthmanager.login( '<%=new_yahoo_session_url%>', yahoo_login_success)
}
function yahoo_login_success(){
    call_yahoo_import()
    $("#yahoo_import_button").attr('onclick', '').click(call_yahoo_import);
    $("#yahoo_import_button").attr('value', 'Refresh')
}
function call_yahoo_import() {
    $("#yahoo_import_button").attr('disabled', 'disabled')
    $("#last_yahoo_import").html("Refreshing...");
    $.ajax({
      dataType: 'json',
      url: '<%=yahoo_contacts_url(:import)%>',
      success: import_yahoo_success,
      error: import_yahoo_failure
    });
}
function import_yahoo_success( contacts ){
    var full_address
    yahoo_contacts = [];
    for each ( var c in contacts) {
        full_address = '<' +c.name+ '> '+c.address
        yahoo_contacts.push( [ c.name, full_address] );
        yahoo_contacts.push( [ c.address, full_address] );
    }
    loadAutocompleter()
    $("#last_yahoo_import").html("Last imported a second ago.")
    $("#yahoo_import_button").attr('disabled','')
}
function import_yahoo_failure( errors ){
   alert("Unable to refresh yahoo contacts at the moment. Please try later")
   $("#last_yahoo_import").html("")
   $("#yahoo_import_button").attr('disabled','')
}


var google_contacts = [
        <% @google_id.contacts.each do|contact| %>
        ["<%=contact.name%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
        ["<%=contact.address%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
        <% end %>
        "ZZangZZing"
    ];

var yahoo_contacts = [
    <% @yahoo_id.contacts.each do|contact| %>
    ["<%=contact.name%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
    ["<%=contact.address%>","<%=contact.name.to_s%> <<%=contact.address%>>"],
    <% end %>
    "ZZZangZZZing"
];


function loadAutocompleter () {
	$("#CityLocal").autocompleteArray(
            google_contacts.concat( yahoo_contacts ),
                {
                    delay:10,
                    minChars:1,
                    matchSubset:1,
                    onItemSelect:selectItem,
                    onFindValue:findValue,
                    autoFill:true,
                    maxItemsToShow:10,
                    selectFirst:true,
                    selectOnly:true,


                }
            );
}





$(document).ready( loadAutocompleter() );



</script>


