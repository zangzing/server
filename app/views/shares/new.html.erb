<div class="offset">
<% flash.each do |key, value| %>
  <div class="flash <%= key %>"><%= value %></div>
<% end %>

<%= link_to "Share this album on Facebook or Twitter", new_album_postshare_url( @album ) %>

<%= link_to "Share this album by email", new_album_emailshare_url( @album ) %>
</div>
<ul id="indicator" class="step-4 clearfix">
  <li id="step-add"><a href="<%= '/albums/'+@album.id+'/add_photos' %>" id="wizard-add">Add Photos</a></li>
  <li id="step-name"><a href="<%= '/albums/'+@album.id+'/name_album' %>" id="wizard-name">Name Album</a></li>
  <li id="step-edit"><a href="<%= '/albums/'+@album.id+'/edit' %>" id="wizard-edit">Edit Album</a></li>
  <li id="step-share" class="on"><a href="<%= '/albums/'+@album.id+'/shares/new' %>" id="wizard-share">Share Album</a></li>
  <li id="step-btn"><a href="javascript:void(0)" id=""><img id="next-step" src="/images/btn-steps-next.png" /></a></li>
</ul>

<div id="share-body">
  <div id="top-section">
    <div class="album-header">
      <h3>Share Album</h3>
      <h4>Set Privacy Settings and Share this Album with Your Friends</h4>
    </div>
  
  </div>
    <%form_for @album, :url => update_album_url(@album)  do |f| %>
      <%=select :album, :privacy, Album::PRIVACIES, {:selected =>@album.privacy },  {:class => "album_privacy rounded"}%> &nbsp; <span class="h4">Allows everyone to see this album</span>
    <%end%>
    <hr>
  
  <div id="scroll-body">  
    
    <ul id="share-pick">
      <li class="social-share link">
        <p><img src="/images/social-btns.png" /></p>
        <p><a href="javascript:void(0);">Share this album on Facebook or Twitter</a></p>
      </li>
      <li class="email-share link">
        <p><img src="/images/email-btn.png" /></p>
        <p><a href="javascript:void(0);">Share this album by Email</a></p>
      </li>
    </ul> 
  
  </div>
</div>