<div class="gridcellbox" >
    <div class="gridcell" >
        <div class="gridcellphoto"  id="photoid<%=photo.id%>" >
            <% #The photo is displayed as a background of this div block. The property is set by javascript in the album show view %> 
             <% if current_user?(photo.album.user) %>
                <%= link_to image_tag( "/images/delete.png" ), photo, { :method => :delete, :class => 'gridcellphotoicon'} %>
             <% end %>
        </div>
    </div>
</div>

