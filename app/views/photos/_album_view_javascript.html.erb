<% content_for :zz_js_page_variables do %>
    zz.page.album_id                    = '<%= @album.id %>';
    zz.page.profile_album               = <%=  @album.type == 'ProfileAlbum'%>;
    zz.page.album_cache_version_key     = '<%= @album.cache_version_key %>';
        zz.page.current_user_can_edit       = <%=  @album.can_user_edit?( current_user ) %>;
    zz.page.current_user_can_download   = <%=  @album.can_user_download?( current_user ) %>;
    zz.page.current_user_can_contribute = <%=  @album.can_user_contribute?( current_user ) %>;
    zz.page.current_user_can_buy_photos = <%=  @album.can_user_buy_photos?( current_user ) %>;
    zz.page.displayed_user_id           = '<%= @album.user.id %>';
    zz.page.displayed_user_name   		= '<%= escape_javascript @album.user.name.strip %>';
    zz.page.displayed_user_pic_url		= '<%= escape_javascript @album.user.profile_photo_url %>';
    zz.page.album_base_url              = '/<%=escape_javascript @album.user.username%>/<%=escape_javascript @album.friendly_id%>';
    zz.page.album_name                  = '<%= escape_javascript raw(@album.name) %>';
    zz.page.back_to_home_page_url       = '<%= back_to_home_page_url @album %>';
    zz.page.back_to_home_page_caption   = '<%= escape_javascript back_to_home_page_caption @album %>';
    zz.page.current_photo_index         = 0;
<% end %>