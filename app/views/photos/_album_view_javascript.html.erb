<script type="text/javascript">
    var zz = zz || {};
    zz.page = zz.page || {};
    zz.page.album_id                    = '<%= @album.id %>';
    zz.page.profile_album               = <%=  @album.type == 'ProfileAlbum'%>;
    zz.page.album_cache_version_key     = '<%= @album.cache_version_key %>';
    zz.page.current_user_can_download   = <%=  @album.can_user_download?( current_user ) %>;
    zz.page.current_user_can_contribute = <%=  @album.can_user_contribute?( current_user ) %>;
    zz.page.current_user_can_buy_photos = <%=  @album.can_user_buy_photos?( current_user ) %>;
