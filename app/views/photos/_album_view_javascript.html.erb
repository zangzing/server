<script type="text/javascript">
  var zz = zz || {};
  zz.page = zz.page || {};

  zz.page.album_id = '<%= @album.id %>';
  zz.page.album_cache_version_key = '<%= @album.cache_version_key %>';
  zz.page.current_user_can_download = <%=( @album.can_user_download?( current_user )? 'true':'false')%>;
  zz.page.displayed_user_id   = '<%= @album.user.id %>';
  zz.page.album_base_url = '/<%=escape_javascript @album.user.username%>/<%=escape_javascript @album.friendly_id%>';
  zz.page.album_name = '<%=escape_javascript raw(@album.name) %>';
  zz.page.back_to_home_page_url = '<%= back_to_home_page_url @album %>';
  zz.page.back_to_home_page_caption = '<%= escape_javascript back_to_home_page_caption @album %>';
  zz.page.current_photo_index = 0;

  <% if flash[:show_add_photos_dialog] == true %>
  $(document).ready(function(){
      zz.photochooser.open_in_dialog(zz.page.album_id, function() {
          window.location.reload(false);
      });
  });
  <% end %>

</script>

