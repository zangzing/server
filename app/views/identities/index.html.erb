<style type="text/css">

#id-table{
    padding: 0px 40px;
    line-height: 2.4em;
    text-align: left;
}
#id-table table{
     width: 100%;
}

#id-table td{
    padding-left: 60px;
}

#id-table img{
    vertical-align:middle; 
}

#id-table th{
    line-height: 2.4em; 
    padding-left: 55px;
}

.id-service-name{
    padding: 0px 25px;
}
.grayrow {
    background-color:#f4f4f4;
}
.whiterow {
}

.id-action-button{
    color: #0000EE;
    cursor: pointer;
}

</style>
<div class="flash-box"><div class="flash-notice" id="flashes-notice">  </div></div>
<div id="scroll-body">
<div id="id-table" >
<table  >
  <tr class="form_label">
    <th></th>
    <th>Status</th>
    <th>Action</th>
  </tr>
  <%    Identity::UI_INFO.keys.each_index do | i |
        service_key = Identity::UI_INFO.keys[i]
        id = current_user.has_identity?(service_key)%>
  <tr class="row <%= ( i%2 == 0? "grayrow" : "whiterow" )%>">
    <td><img src="/images/logos/<%=service_key%>-sq.png" >
      <span class="form_label id-service-name"><%= Identity::UI_INFO[service_key][:name] %></span>
    </td>
    <td
      <div>
      <div class="form_label id-status" id="<%=service_key%>-status" service="<%=service_key%>" style="<%=(  id  ? "" : "display:none" ) %>">
          <img src="/images/btn-check-on.png" >
          Linked
      </div>
      </div>  
    </td>
    <td>
      <div class="form_label id-action-button" id="<%=service_key%>-action" service="<%=service_key%>">
          <a class="delete-id-button"
                id="<%=service_key%>-delete"
                service="<%=service_key%>"
                value="<%=delete_identity_path(:id => service_key)%>"
                style="<%=(  id  ? "": "display:none" )%>">
	        Unlink
          </a>
          <a class="authorize-id-button"
                id="<%=service_key%>-authorize"
                service="<%=service_key%>"
                value="/<%=service_key%>/sessions/new"
                style="<%=(  id  ?  "display:none" : "")%>">
	         Link
          </a>
      </div>
     </td>
  </tr>
<% end %>
</table>
</div>
</div>
 <div class="settings-buttons">
    <a     id="cancel_profile_button" href="javascript:void(0);" style="visibility: hidden;" class="cancel-button">Cancel</a>
    <input id="ok_id_button" type="image" name="submit" src="/images/btn-wizard-done.png">
 </div>      
