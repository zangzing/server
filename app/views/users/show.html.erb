<table class="profile">
  <tr>
    <td class="main">
      <h2 class="album">
        <%= h @user.name %>
      </h2>
      <table class="albums">
    	<% unless @user.albums.empty? %>
	        <%= render :partial => "albums/album", :collection =>  @albums  %>
	    <% end %>
      </table>
      <%= will_paginate @albums %>

      <% if current_user?( @user ) %>
        <%=button_to "Create New Album", new_user_album_path( current_user ), :method => :get %>
      <%end %>
	</td>
    
  </tr>
</table>
