<%      if @user_session && @user_session.errors 
          @user_session.errors.each do | key, value| 
            if key == 'email' || key == 'password' -%>
          <p class="error-notice"><%=key %> <%=value %></p>
<%          else %>
          <p class="error-notice"><%=value %></p>
<%          end
          end 
        else -%>
          <p class="error-notice">Please check the highlighted field(s) below...</p>
<%      end -%>   

            <form method="post" id="new_user_session" class="new_user_session" action="/user_sessions">
              <dl class="clearfix">
                <dt><label for="user_session_email">Username or Email Address</label></dt>
                <dd><input type="text" size="30" name="user_session[email]" id="user_session_email"></dd>
                <dt><label for="user_session_password">Password</label></dt>
                <dd><input type="password" size="30" name="user_session[password]" id="user_session_password"></dd>
                <dt class="button"><a href="/password_resets/new">Forgot your password?</a></dt>
                <dd class="button">
                  <a href="javascript:void(0);" class="cancel-mini">Cancel</a> <input type="image" name="submit" src="/images/btn-sign-in.png">
                </dd>            
              </dl>
    
            </form>          
