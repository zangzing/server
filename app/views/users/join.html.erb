<%= include_javascripts :zz %>
<%= include_javascripts :zz_oauthmanager %>

<script type="text/javascript">
    $(document).ready(function(){
        // TODO: change this
        ZZAt.track('invitation.page.visit');

        <%= perform_javascript_actions %>

        zz.local_storage.clear();

        //$('.joinpage .join-form label').inFieldLabels();

        zz.joinform.add_validation($('.joinpage .join-form'));
        
        $('#user_username').keyup(function(event){
            var username = $('#user_username').val();
            //set the value in the homepage url
            $('#username').text(username);
        });


        $('.joinpage .submit-button').click(function(){
            $('.joinpage .join-form').submit();
            ZZAt.track('invitation.page.join-button.click');

        });


        $('.joinpage .join-form').bind('keypress', function(e){
            if ( e.keyCode == 13 ) {
                $(".joinpage .join-form").submit();
                ZZAt.track('invitation.page.join-button.click');
            }
        });



        // slideshow
        var current_slide = 0;
        var LAST_SIDE = 4;
        var animating = false;

        var goto_slide = function(slide_index){
            if (slide_index < 0 || slide_index > LAST_SIDE){
                return;
            }


            if (animating){
                return;
            }

            var left = slide_index * 906 * -1;
            animating = true;
            $('.joinpage .slide-container .slide-clip').animate({left: left}, 500, 'easeOutCirc', function(){
                animating = false;
                current_slide = slide_index;
                show_next_prev_buttons();
                update_slide_dots();
            });
        };

        var update_slide_dots = function(){
            $('.joinpage .bottom-section .slide-dots .dot').removeClass('selected');
            $($('.joinpage .bottom-section .slide-dots .dot').get(current_slide)).addClass('selected');
        };

        var show_next_prev_buttons = function(){

            if(current_slide != LAST_SIDE){
                $('.joinpage .bottom-section .next-button').fadeIn('fast');
            }
            else{
                $('.joinpage .bottom-section .next-button').fadeOut('fast');
            }

            if(current_slide != 0) {
                $('.joinpage .bottom-section .prev-button').fadeIn('fast');
            }
            else{
                $('.joinpage .bottom-section .prev-button').fadeOut('fast');

            }

        };


        $('.joinpage .bottom-section').mouseenter(function(){
            show_next_prev_buttons();
        });

        $('.joinpage .bottom-section').mouseleave(function(){
            $(this).find('.next-button').fadeOut('fast');
            $(this).find('.prev-button').fadeOut('fast');
        });


        // wire up next/prev buttons
        $('.joinpage .bottom-section .next-button').click(function(){
            goto_slide(current_slide + 1);
        });

        $('.joinpage .bottom-section .prev-button').click(function(){
            goto_slide(current_slide - 1);
        });

        // wire up dot controls
        for(var i=0;i<=4;i++){
            (function(slide){
                $($('.joinpage .bottom-section .slide-dots .dot').get(slide)).click(function(){
                    goto_slide(slide);
                });
            })(i);
        }



        update_slide_dots();


    });

</script>

</body>
