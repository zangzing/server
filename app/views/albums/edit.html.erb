<%= javascript_tag do %>
    var json = '<%=escape_javascript(raw @album.to_json(:include => {:photos => {:only =>[:id, :source_thumb_url, :state], :methods => [:thumb_url]}}))%>';
<% end %>

<% unless @album.photos.empty? %>
  <ul class="photos-grid-view photos clearfix">
    <%= render :partial => "photos/photo_thumb", :collection => @photos, :as => :photo, :locals => {:delete => true} %>
  </ul>
<% end %>