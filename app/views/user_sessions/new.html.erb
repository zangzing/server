<h2>Sign in</h2>

<% form_for(@user_session, :url => user_sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %><br />
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to " Sign up!", signup_path %></p>
<br>
<p>Forgot your password? <%= link_to "Reset my password", new_password_reset_path %></p>
