<div id="footer">
  <% if current_user %>
      <div id="new-album-button"><div class='footer-button-label'>Create</div></div>
  <% end %>

  <% if @album && current_user && (@album.user == current_user)%>
      <div id="edit-album-button"><div class='footer-button-label'>Edit</div></div>
  <% end %>

  <% if @album && current_user && @album.is_user_contributor?(current_user) %>
      <div id="add-photos-button"><div class='footer-button-label'>Add</div></div>
  <% end %>


  <% if @album %>
      <div id="progress-meter"><div id="progress-meter-label" class='footer-button-label'>Calculating...</div></div>
      <div id="play-button"></div>
  <% end %>




  <% if @album && current_user %>
      <div id="share-button"><div class="footer-button-label">Share</div></div>
  <% end %>

  <div id="like-button"><div class="footer-button-label">Like</div></div>
  <div id="buy-button"><div class="footer-button-label">Buy</div></div>



</div>


<ul class="context_menu popup" id="like-popup">
  <li id="like-person">PERSON</li>
  <li id="like-album">ALBUM</li>
  <li id="like-photo">PHOTO</li>
</ul>