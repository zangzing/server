<h2 class='album'>Google Contacts (<%= link_to "refresh", :reload_google_contacts, :method => :get %>)</h2>


<select id="contacts" size="30" multiple>
<% @contacts.each do|contact| %>

<option value="<%=contact.address%>"><%=contact.name.to_s + " [" + contact.address + "]"%></option>


<% end %>

</select>

<br>
<span style="float:right">
<a href=""  onclick="cancel();return true">Cancel</a>
&nbsp;
<a href=""  onclick="done();return true">OK</a>
</span>

<script>
    function cancel()
    {
        window.close()
    }

    function done()
    {

        var contacts = ""


        var options = $('#contacts')[0].options

        for(var i = 0; i < options.length; i++)
        {
           if(options[i].selected)
           {
              contacts += "; " +options[i].value
           }
        }

        window.opener.addContacts(contacts)
        window.close()
    }



</script>




